{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "dev": "docker compose -f docker-compose.dev.yml up --build",
    "dev:local": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/index.ts",
    "dev:down": "docker compose  -f docker-compose.dev.yml down && docker compose -f docker-compose.dev.yml down -v",
    "down": "docker compose -f docker-compose.yml down && docker compose down -v",
    "db-dev:migrate-with-seed": "TS_NODE_PROJECT=./tsconfig.json bun x tsx -r tsconfig-paths/register ./src/db/migrate-seed-db.ts",
    "db-prod:migrate-with-seed": " node  ./dist/db/migrate-seed-db.js",
    "build": "docker compose -f docker-compose.yml up --build",
    "build:prod": "tsc  && tsc-alias -p tsconfig.json",
    "copy:files": "bunx cpx \"migrations/**\" ./dist/migrations",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "check": "npm run lint && npm run typecheck",
    "db:generate": "npx drizzle-kit generate",
    "db:migrate": "npx drizzle-kit migrate",
    "db:push": "npx drizzle-kit push",
    "db:pull": "npx drizzle-kit pull",
    "db:up": "npx drizzle-kit up",
    "db:studio": "npx drizzle-kit studio",
    "inngest:dev": "npx inngest-cli@latest dev -u http://localhost:4000/api/inngest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.45",
    "@ai-sdk/google": "^2.0.40",
    "@ai-sdk/openai": "^2.0.71",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/rate-limit": "^10.3.0",
    "@polar-sh/fastify": "^0.5.0",
    "@polar-sh/sdk": "^0.41.5",
    "@sentry/node": "^10.26.0",
    "@socket.io/redis-streams-adapter": "^0.2.2",
    "ai": "^5.0.98",
    "arctic": "^3.7.0",
    "bcryptjs": "^3.0.3",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "drizzle-zod": "^0.8.3",
    "fastify": "^5.6.2",
    "fastify-plugin": "^5.1.0",
    "inngest": "^3.45.1",
    "ioredis": "^5.8.2",
    "jose": "^6.1.2",
    "opossum": "^9.0.0",
    "postgres": "^3.4.7",
    "prom-client": "^15.1.3",
    "rate-limiter-flexible": "^8.2.1",
    "socket.io": "^4.8.1",
    "ulid": "^3.0.1",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "drizzle-kit": "^0.31.7",
    "pino-pretty": "^13.1.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
